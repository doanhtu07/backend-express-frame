{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"] // Import shortcut for '/src' folder
    },
    "typeRoots": ["@types", "node_modules/@types"],

    "strictNullChecks": true // https://www.prisma.io/docs/guides/testing/unit-testing
  },
  "include": ["src/**/*", "@types"]
}
